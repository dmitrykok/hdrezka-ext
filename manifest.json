{
    "manifest_version": 3,
    "name": "HDRezka Next Episode Button",
    "version": "1.0",
    "description": "Adds a next episode popup button in fullscreen mode on hdrezka websites.",
    "content_scripts": [
        {
            "matches": [
                "*://hdrezka.website/*",
                "*://hdrezka.ag/*",
                "*://rezka.ag/*",
                "*://rezka-ua.tv/*",
                "*://hdrezka.co/*",
                "*://hdrezka.name/*",
                "*://hdrezka.ink/*",
                "*://*.hdrezka.website/*",
                "*://*.hdrezka.ag/*",
                "*://*.rezka.ag/*",
                "*://*.rezka-ua.tv/*",
                "*://*.hdrezka.co/*",
                "*://*.hdrezka.name/*",
                "*://*.hdrezka.ink/*"
            ],
            "js": [
                "next_button.js"
            ],
            "css": [
                "next_button.css"
            ]
        }
    ],
    "permissions": []
}